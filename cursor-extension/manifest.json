{
    "manifest_version": 3,
    "name": "Cursor Smart Recovery",
    "version": "1.0",
    "description": "Automated Cursor team recovery system for Snippy Mart.",
    "permissions": [
        "storage",
        "activeTab",
        "notifications",
        "alarms"
    ],
    "host_permissions": [
        "https://cursor.com/*",
        "https://snippymart.com/*",
        "https://*.supabase.co/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://cursor.com/dashboard*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "style.css"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "https://cursor.com/team-invite/*",
                "https://cursor.sh/team-invite/*",
                "https://cursor.com/team/accept-invite*",
                "https://cursor.sh/team/accept-invite*"
            ],
            "js": [
                "auto-join.js"
            ],
            "run_at": "document_start"
        }
    ],
    "action": {
        "default_title": "Cursor Status",
        "default_popup": "popup.html"
    }
}